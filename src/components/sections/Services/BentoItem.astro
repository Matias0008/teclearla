---
interface Props {
  colspan: number;
  title: string;
  index: number;
}

const { colspan, title, index } = Astro.props;
---

<div
  class={`col-span-2 md:col-span-${colspan} flex flex-col text-white items-center justify-center bg-default/30  px-6 py-8 gap-4 text-center rounded-xl ${
    index % 2 !== 0 ? "md:mt-16 md:h-full" : ""
  }`}
>
  <h1 class="text-xl md:text-2xl font-title">{title}</h1>
  <slot />
</div>

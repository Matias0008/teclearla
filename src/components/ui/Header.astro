---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"h1"> {
  title: string;
  subtitle?: string;
  addSubtitleClass?: string;
}

const {
  subtitle,
  title,
  class: className,
  addSubtitleClass = "",
  ...attrs
} = Astro.props;
---

<div class="flex flex-col gap-3">
  {
    subtitle && (
      <h2 class={`text-xl font-bold text-subtitle ${addSubtitleClass}`}>
        {subtitle}
      </h2>
    )
  }
  <h1
    class={`text-3xl md:text-5xl leading-[3rem] md:leading-[3.7rem] text-white font-title ${className}`}
    {...attrs}
  >
    {title}
  </h1>
</div>
